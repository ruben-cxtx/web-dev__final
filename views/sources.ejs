<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sources</title>
  <link href="/styles/styles.css" rel="stylesheet">
  <link href="/styles/sources.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/8f4601af06.js" crossorigin="anonymous"></script>
</head>
<body>
  <%- include("partials/header") %>
  <main id="main-content" tabindex="-1">
    <section class="page-hero">
      <h1>Sources</h1>
    </section>
          <section class="table__sources">
          <table class="url-list">
        <caption class="visually-hidden">Sources used in the project</caption>
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Used in</th>
            <th scope="col">Link</th>
          </tr>
        </thead>
        <tbody>
          <% if (sources && sources.length) { %>
            <% sources.forEach((source) => { %>
              <tr>
                <td><%= source.name %></td>
                <td><%= source.page %></td>
                <td>
                  <a href="<%= source.url %>" target="_blank" rel="noopener noreferrer">link</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3">No sources yet.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
  </main>
  <%- include("partials/footer") %>
</body>
</html>
